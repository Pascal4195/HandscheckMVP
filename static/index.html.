<!DOCTYPE html>
<html>
<head>
    <title>HandsCheck V2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body { background: #121212; color: white; font-family: sans-serif; text-align: center; padding: 50px 20px; }
        input, select, button { padding: 12px; margin: 10px; border-radius: 5px; border: none; }
        #result { margin-top: 30px; padding: 20px; border-radius: 15px; display: none; background: #1e1e1e; }
        .badge { font-size: 1.8rem; font-weight: bold; margin-bottom: 10px; }
    </style>
</head>
<body>
    <h1>üîç HandsCheck V2</h1>
    <p>Analyze the last 7 days of activity</p>
    
    <select id="coin">
        <option value="eth">Ethereum (ETH)</option>
        <option value="btc">Bitcoin (BTC)</option>
    </select>
    <input type="text" id="address" placeholder="Enter Wallet Address" style="width: 80%; max-width: 400px;">
    <button onclick="checkWallet()" style="background: #007bff; color: white; cursor: pointer;">Analyze Wallet</button>

    <div id="result">
        <div id="verdict-label" class="badge"></div>
        <div id="details-text"></div>
    </div>

    <script>
        async function checkWallet() {
            const coin = document.getElementById('coin').value;
            const addr = document.getElementById('address').value;
            const resDiv = document.getElementById('result');
            
            resDiv.style.display = 'block';
            resDiv.innerHTML = "Analyzing blockchain...";

            const response = await fetch(`/check/${coin}/${addr}`);
            const data = await response.json();

            resDiv.innerHTML = `
                <div id="verdict-label" class="badge" style="color: ${data.color}">${data.verdict}</div>
                <div style="color: #aaa">${data.details}</div>
            `;
            resDiv.style.border = `2px solid ${data.color}`;
        }
    </script>
</body>
</html>
