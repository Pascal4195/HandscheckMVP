<body>
    <button class="theme-toggle" onclick="toggleTheme()">üåô</button>

    <div class="container">
        <header>
            <h1>HandsCheck</h1>
            <p class="subtitle">Wallet Behavior Analyzer</p>
        </header>

        <div class="input-section">
            <div class="input-row">
                <input type="text" id="walletAddress" placeholder="Enter wallet address..." autocomplete="off">
            </div>

            <div class="asset-selector">
                <button class="asset-btn active" data-asset="BTC" onclick="selectAsset('BTC')">‚Çø BTC</button>
                <button class="asset-btn" data-asset="ETH" onclick="selectAsset('ETH')">Œû ETH</button>
            </div>

            <button class="check-btn" onclick="checkHands()" id="checkBtn">Check Hands üîç</button>
            <div id="errorMessage"></div>
        </div>

        <div class="verdict-box" id="verdictBox">
            <div id="loadingState" style="display: none;">Analyzing on-chain activity...</div>
            <div id="verdictContent" style="display: none;">
                <div class="verdict-emoji" id="verdictEmoji"></div>
                <div class="verdict-label" id="verdictLabel"></div>
                <div class="verdict-description" id="verdictDescription"></div>
                <button class="copy-btn" onclick="copyVerdict(event)">üìã Copy Verdict</button>
            </div>
            <div id="placeholderText">Enter an address to reveal their hands.</div>
        </div>

        <footer>Based on last 24h on-chain activity</footer>
    </div>

    <script>
        // Use window.location.origin so it works on Replit automatically
        const API_URL = window.location.origin; 
        let selectedAsset = 'BTC';

        function toggleTheme() {
            document.body.classList.toggle('light-mode');
            document.querySelector('.theme-toggle').textContent = document.body.classList.contains('light-mode') ? '‚òÄÔ∏è' : 'üåô';
        }

        function selectAsset(asset) {
            selectedAsset = asset;
            document.querySelectorAll('.asset-btn').forEach(btn => btn.classList.remove('active'));
            document.querySelector(`[data-asset="${asset}"]`).classList.add('active');
        }

        async function copyVerdict(e) {
            const text = `${document.getElementById('verdictEmoji').textContent} ${document.getElementById('verdictLabel').textContent}\n"${document.getElementById('verdictDescription').textContent}"\n‚Äî HandsCheck`;
            await navigator.clipboard.writeText(text);
            const btn = e.target;
            btn.textContent = '‚úì Copied!';
            setTimeout(() => btn.textContent = 'üìã Copy Verdict', 2000);
        }

        async function checkHands() {
            const address = document.getElementById('walletAddress').value.trim();
            const checkBtn = document.getElementById('checkBtn');
            const verdictBox = document.getElementById('verdictBox');
            
            if (!address) {
                document.getElementById('errorMessage').innerHTML = '<div class="error-message">Address required</div>';
                return;
            }

            // UI States
            document.getElementById('errorMessage').innerHTML = '';
            checkBtn.disabled = true;
            document.getElementById('loadingState').style.display = 'block';
            document.getElementById('placeholderText').style.display = 'none';
            document.getElementById('verdictContent').style.display = 'none';
            verdictBox.className = 'verdict-box';

            try {
                const response = await fetch(`${API_URL}/analyze`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ address: address, asset: selectedAsset })
                });

                if (!response.ok) throw new Error('Wallet not found or API error');

                const data = await response.json();
                
                // Parse "Emoji Label"
                const parts = data.verdict.split(' ');
                document.getElementById('verdictEmoji').textContent = parts[0];
                document.getElementById('verdictLabel').textContent = parts.slice(1).join(' ');
                document.getElementById('verdictDescription').textContent = data.description;

                // Color coding
                const label = data.verdict.toLowerCase();
                if (label.includes('diamond')) verdictBox.classList.add('diamond');
                else if (label.includes('paper')) verdictBox.classList.add('paper');
                else if (label.includes('exit')) verdictBox.classList.add('exit');
                else if (label.includes('weak')) verdictBox.classList.add('weak');

                document.getElementById('verdictContent').style.display = 'block';
            } catch (err) {
                document.getElementById('errorMessage').innerHTML = `<div class="error-message">${err.message}</div>`;
                document.getElementById('placeholderText').style.display = 'block';
            } finally {
                checkBtn.disabled = false;
                document.getElementById('loadingState').style.display = 'none';
            }
        }
    </script>
</body>
</html>
